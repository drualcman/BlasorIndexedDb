<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.5.17</Version>
    <Authors>Sergi Ortiz Gomez</Authors>
    <Company>DrUalcman</Company>
    <Description>Manage IndexedDb from Blazor WebAssembly applications. Create a StoreDbContext similar how is working in EF</Description>
    <Copyright>Free</Copyright>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <PackageTags>webassembly, blazor, indexedDb, interop, javascript, database</PackageTags>
    <PackageReleaseNotes>Fixed wrong exception on update from Blazor because Javascript finished a promise too early.
Add ResponseException to encapsulate and manage the exceptions .</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/drualcman/BlasorIndexedDb</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageId>DrUalcman-BlazorIndexedDb</PackageId>
    <Product>BlazorIndexedDb</Product>
    <PackageProjectUrl>https://blazorindexdb.community-mall.com/</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <AssemblyVersion>1.5.17.2</AssemblyVersion>
    <FileVersion>1.5.17.2</FileVersion>
    <AssemblyName>DrUalcman-BlazorIndexedDb</AssemblyName>
    <RootNamespace>BlazorIndexedDb</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>C:\DrUalcman\BlasorIndexedDb\BlasorIndexedDb\BlazorIndexedDb.xml</DocumentationFile>
    <GenerateSerializationAssemblies>Auto</GenerateSerializationAssemblies>
  </PropertyGroup>

  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.8" />
  </ItemGroup>

  <ItemGroup>
    <None Include="License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
